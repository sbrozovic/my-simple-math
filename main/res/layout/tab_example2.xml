<?xml version="1.0" encoding="utf-8"?>
<!--Part of TabLessonActivity-->
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp">

        <!-- tu se unosi koje ce elemente imati tab-->
        <io.github.kexanie.library.MathView
            android:id="@+id/mathView_tabExample2_task"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"></io.github.kexanie.library.MathView>

        <TextView
            android:id="@+id/textView_tabExample2_1"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/mathView_tabExample2_task" />

        <io.github.kexanie.library.MathView
            android:id="@+id/mathView_tabExample2_2"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_tabExample2_1"></io.github.kexanie.library.MathView>

        <TextView
            android:id="@+id/textView_tabExample2_3"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mathView_tabExample2_2" />

        <TextView
            android:id="@+id/textView_tabExample2_5"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/mathView_tabExample2_4" />

        <io.github.kexanie.library.MathView
            android:id="@+id/mathView_tabExample2_4"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView_tabExample2_3"></io.github.kexanie.library.MathView>

        <TextView
            android:id="@+id/textView_tabExample2_7"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/mathView_tabExample2_6" />

        <ImageView
            android:id="@+id/imageView_tabExample2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_tabExample2_1" />

        <ImageView
            android:id="@+id/imageView_tabExample2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/mathView_tabExample2_3"
            app:layout_constraintHorizontal_bias="0.501" />

        <io.github.kexanie.library.MathView
            android:id="@+id/mathView_tabExample2_6"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_tabExample2_5"></io.github.kexanie.library.MathView>

        <io.github.kexanie.library.MathView
            android:id="@+id/mathView_tabExample2_3"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_tabExample2_3"></io.github.kexanie.library.MathView>


    </android.support.constraint.ConstraintLayout>
</LinearLayout></ScrollView>