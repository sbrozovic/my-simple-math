<?xml version="1.0" encoding="utf-8"?>
<!-- Part of LessonActivity -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/card_lesson_radius">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lesson_thumbnail_height"
                android:background="@android:color/holo_blue_light"
                android:clickable="true"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_thumbnail"
                android:paddingLeft="@dimen/lesson_title_padding"
                android:paddingRight="@dimen/lesson_title_padding"
                android:paddingTop="@dimen/lesson_title_padding"
                android:textColor="@android:color/holo_purple"
                android:textSize="@dimen/lesson_title"/>

            <TextView
                android:id="@+id/text_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_title"
                android:paddingBottom="@dimen/description_padding_bottom"
                android:paddingLeft="@dimen/lesson_title_padding"
                android:paddingRight="@dimen/lesson_title_padding"
                android:textSize="@dimen/description_text_size"/>

          <!--  <ImageView
                android:id="@+id/overflow"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_below="@id/image_thumbnail"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_main"/>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>