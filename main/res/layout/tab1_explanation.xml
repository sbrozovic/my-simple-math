<?xml version="1.0" encoding="utf-8"?>
<!--Part of TabLessonActivity-->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- tu se unosi koje ce elemente imati tab-->
    <TextView
        android:id="@+id/textVIew_tab1Expl_Title"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="35dp"
        android:fontFamily="casual"
        android:text="Tab 1 explanation"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="25dp"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_tab1Expl_1"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVIew_tab1Expl_Title" />

    <TextView
        android:id="@+id/textView_tab1Expl_2"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="@+id/textView_tab1Expl_1"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_1" />

    <TextView
        android:id="@+id/textView_tab1Expl_3"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_2" />

    <TextView
        android:id="@+id/textView_tab1Expl_4"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        app:layout_constraintLeft_toLeftOf="@+id/textView_tab1Expl_3"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_3" />

    <ImageView
        android:id="@+id/imageView_tab1Expl"
        android:layout_width="313dp"
        android:layout_height="265dp"
        app:srcCompat="@color/colorPrimary"
        android:layout_marginEnd="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView_tab1Expl_4"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_4"
        android:layout_marginRight="0dp" />

    <io.github.kexanie.library.MathView
        android:id="@+id/mathView_tab1Expl_1"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_tab1Expl_2"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_1"></io.github.kexanie.library.MathView>

    <io.github.kexanie.library.MathView
        android:id="@+id/mathView_tab1Expl_2"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_tab1Expl_2"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_2"></io.github.kexanie.library.MathView>

    <io.github.kexanie.library.MathView
        android:id="@+id/mathView_tab1Expl_3"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_tab1Expl_4"></io.github.kexanie.library.MathView>

    <TextView
        android:id="@+id/textView_tab1Expl_5"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mathView_tab1Expl_3" />

</android.support.constraint.ConstraintLayout>
</LinearLayout></ScrollView>